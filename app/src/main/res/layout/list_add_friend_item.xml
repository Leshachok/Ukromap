<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/listfriendsxml">

    <TextView
        android:id="@+id/usernick"
        android:layout_width="148dp"
        android:layout_height="23dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_mono"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userphoto" />

    <TextView
        android:id="@+id/usersights"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/roboto_mono"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/userborsch"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userborsch"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/borscht" />

    <ImageView
        android:id="@+id/userphoto"
        android:layout_width="83dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/requestbutton"
        android:layout_width="114dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"
        android:text="Надіслати запит"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userguid"
        android:layout_width="175dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/usernick"
        app:layout_constraintStart_toStartOf="@+id/usernick"
        app:layout_constraintTop_toBottomOf="@+id/usernick" />
</androidx.constraintlayout.widget.ConstraintLayout>