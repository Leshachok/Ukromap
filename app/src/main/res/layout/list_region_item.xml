<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/listregstar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/borscht" />

    <TextView
        android:id="@+id/listregnum"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_mono"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listregname"
        android:layout_width="256dp"
        android:layout_height="27dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_mono"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/listregnum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listregcountstars"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_mono"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listregstar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/listregbutton"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/listregsbutton"
        android:fontFamily="@font/roboto_mono"
        android:text="Детальніше"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listregnum" />

</androidx.constraintlayout.widget.ConstraintLayout>